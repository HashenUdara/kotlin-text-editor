{
    "name": "JavaScript",
    "scopeName": "source.js",
    "fileTypes": ["js", "jsx", "mjs"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.js",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.js",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.template.js",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "constant.character.escape.js",
                            "match": "\\\\."
                        },
                        {
                            "name": "meta.embedded.expression.js",
                            "begin": "\\$\\{",
                            "end": "\\}"
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.js",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.js",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.js",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.js",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.js",
                    "match": "\\b(break|case|catch|continue|default|do|else|finally|for|if|return|switch|throw|try|while)\\b"
                },
                {
                    "name": "keyword.operator.js",
                    "match": "\\b(in|of|instanceof|typeof|new|delete)\\b"
                },
                {
                    "name": "storage.type.js",
                    "match": "\\b(var|let|const|function|class|extends|import|export|from|as)\\b"
                },
                {
                    "name": "constant.language.js",
                    "match": "\\b(true|false|null|undefined|this|super)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.js",
                    "match": "\\b\\d+\\.\\d*\\b"
                },
                {
                    "name": "constant.numeric.js",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.js",
                    "match": "\\bfunction\\s+([a-zA-Z_$][a-zA-Z0-9_$]*)",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.js"
                        }
                    }
                },
                {
                    "name": "entity.name.function.js",
                    "match": "([a-zA-Z_$][a-zA-Z0-9_$]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.js"
                        }
                    }
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.js",
                    "match": "\\+|\\-|\\*|\\/|%|\\=|\\!|\\<|\\>|\\&|\\||\\^|\\~"
                }
            ]
        }
    }
}

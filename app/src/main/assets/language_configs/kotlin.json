{
  "name": "Kotlin",
  "fileExtensions": ["kt", "kts"],
  "keywords": {
    "primary": [
      "class", "interface", "object", "enum", "annotation",
      "fun", "val", "var", "constructor", "init",
      "if", "else", "when", "for", "while", "do", "break", "continue", "return",
      "try", "catch", "finally", "throw", "throws",
      "import", "package", "as", "typealias",
      "in", "out", "is", "!is", "as?",
      "this", "super", "it"
    ],
    "secondary": [
      "public", "private", "protected", "internal",
      "open", "final", "abstract", "sealed", "data", "inline", "infix",
      "operator", "suspend", "tailrec", "vararg", "crossinline", "noinline",
      "reified", "lateinit", "lazy", "by", "where",
      "override", "companion", "inner", "nested"
    ],
    "types": [
      "Any", "Unit", "Nothing", "Boolean", "Byte", "Short", "Int", "Long",
      "Float", "Double", "Char", "String", "Array", "List", "Set", "Map",
      "Pair", "Triple", "Result", "Sequence"
    ],
    "literals": ["true", "false", "null"],
    "functions": [
      "println", "print", "readLine", "require", "check", "error",
      "TODO", "run", "let", "also", "apply", "with", "takeIf", "takeUnless",
      "repeat", "forEach", "map", "filter", "reduce", "fold"
    ]
  },
  "patterns": {
    "singleLineComment": "//",
    "multiLineCommentStart": "/*",
    "multiLineCommentEnd": "*/",
    "stringDelimiters": ["\"", "'"],
    "numberPattern": "\\b\\d+(\\.\\d+)?[fFdDlL]?\\b",
    "identifierPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
    "operatorPattern": "[+\\-*/=%<>!&|^~?.:]",
    "bracketPattern": "[\\[\\]{}()]",
    "functionCallPattern": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
    "annotationPattern": "@[a-zA-Z_][a-zA-Z0-9_]*"
  },
  "colors": {
    "keyword": "#569CD6",
    "secondaryKeyword": "#C586C0",
    "type": "#4EC9B0",
    "string": "#CE9178",
    "number": "#B5CEA8",
    "comment": "#6A9955",
    "operator": "#D4D4D4",
    "function": "#DCDCAA",
    "class": "#4EC9B0",
    "literal": "#569CD6",
    "identifier": "#D4D4D4",
    "annotation": "#C586C0"
  },
  "features": {
    "lineNumbers": true,
    "wordWrap": false,
    "highlightCurrentLine": true,
    "bracketMatching": true,
    "autoIndent": true,
    "indentSize": 4,
    "usesTabs": false,
    "caseSensitive": true
  }
}
